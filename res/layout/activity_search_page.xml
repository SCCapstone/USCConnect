   <Button
        android:id="@+id/btnDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonBar"
        android:layout_below="@+id/buttonBar"
        android:layout_marginTop="72dp"
        android:background="#636363"
        android:onClick="onClick_DisplayRecords"
        android:text="Display"
        android:textColor="#FFFFFF" />
  
     <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonBar"
        android:layout_below="@+id/btnDisplay"
        android:background="#636363"
        android:onClick="onClick_AddRecord"
        android:text="Add"
        android:textColor="#FFFFFF" />


    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonBar"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Find Experiences..." />

    <TextView
        android:id="@+id/textDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnClear"
        android:layout_below="@+id/btnClear"
        android:layout_marginTop="61dp"
        android:alpha="1"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:linksClickable="true"
 		android:autoLink="web|email" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/autoCompleteTextView1"
        android:layout_marginLeft="16dp"
        android:background="#636363"
        android:onClick="onClick_test"
        android:text="Find"
        android:textColor="#FFFFFF" />

</RelativeLayout>